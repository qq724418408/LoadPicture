<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!" />

    <Button
        android:id="@+id/btn_to_glide_demo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/common_btn_glide"/>

    <Button
        android:id="@+id/btn_to_fresco_demo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/common_btn_fresco"/>

    <Button
        android:id="@+id/btn_to_picasso_demo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/common_btn_picasso"/>


</LinearLayout>
